@using FivePSocialNetwork.Models;
@model Question
@{
    ViewBag.Title = "DetailQuestion";
    Layout = "~/Views/Shared/_LayoutCenter.cshtml";
    FivePSocialNetWorkEntities db = new FivePSocialNetWorkEntities();
    var varColororangered = "orangered";
    var varColorMain = "#172b4d";
}
<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v10.0&appId=1075138046266613&autoLogAppEvents=1" nonce="minGHexe"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/10.5.0/styles/stackoverflow-light.min.css">
<script src="~/assets/ckeditor5/build/ckeditor.js"></script>
<style>
    .scroll_text {
        max-height: 450px;
        overflow: auto;
        padding: 0px 15px;
    }

        .scroll_text::-webkit-scrollbar {
            width: 8px;
        }

        .scroll_text::-webkit-scrollbar-track {
            background-color: #E7E7E7
        }

        .scroll_text::-webkit-scrollbar-thumb {
            border: 1px solid rgba(92, 92, 92, 0.5);
            border-radius: 10px;
        }

            .scroll_text::-webkit-scrollbar-thumb:hover {
                background-color: #000;
            }

    .ck.ck-editor__editable_inline > :last-child {
        margin-bottom: 120px;
    }

    body {
        font-family: Arial
    }

    .input-group {
        box-shadow: 0 3px 2px rgb(233 236 239 / 5%);
    }

    a {
        color: #525f7f;
    }
</style>
<div class="header pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row py-4">
                <div class="col-xl-12">
                    @if (Session["detectSentiment"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <span class="alert-icon"><i class="ni ni-bell-55"></i></span>
                            <span class="alert-text">@Session["detectSentiment"]</span>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        Session["detectSentiment"] = null;
                    }
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <span class="alert-icon"><i class="ni ni-like-2"></i></span>
                        <span class="alert-text"><strong>Danh tiếng!</strong> Các bạn trả lời bài viết này, câu trả lời của bạn được <span style="font-size:15px">+4 vote</span> , điểm danh tiếng của các bạn sẽ tăng lên <span style="font-size:17px;color:red"> @Model.question_popular</span> <i class="fas fa-fire" style="color:red"></i></span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt-sm--7" ng-app="myApp">

    <div class="row" ng-controller="myCtrl">

        <div class="col-xl-8">
            <!-- Post Begins -->
            <section class="card mt-4">
                <div class="border p-2">
                    <!-- post header -->

                    <div class="row">
                        <div class="col-2">
                            <!--Đánh giá bài viết-->
                            @if (Request.Cookies["user_id"] != null)
                            {
                                int user_id = int.Parse(Request.Cookies["user_id"].Value.ToString());
                                Rate_Question checkRate_Question = db.Rate_Question.SingleOrDefault(n => n.user_id == user_id && n.question_id == Model.question_id);
                                Tick_Question checkTick_Question = db.Tick_Question.SingleOrDefault(n => n.user_id == user_id && n.question_id == Model.question_id);
                                Show_Activate_Question checkShow_Activate_Question = db.Show_Activate_Question.SingleOrDefault(n => n.user_id == user_id && n.question_id == Model.question_id);
                                <center>
                                    <form ng-submit="rateQuestionT()" method="post" class="changSizeButtonRatePost">
                                        <button type="submit" onclick="btnRateQuestionT()" class="btn btn-sm" data-toggle="tooltip" data-placement="right" title="Vote câu hỏi"><i id="imgRateQuestionT" style="font-size:200%;color:@if (checkRate_Question != null && checkRate_Question.rateQuestion_rateStatus == true) { @varColororangered } else { @varColorMain }" class="fa fa-chevron-up"></i></button>
                                    </form>
                                </center>
                                <center>
                                    <div style="text-align: center">
                                        <p style="margin-top:6px;font-size:15px;" id="totalRateQuestion" data-toggle="tooltip" data-placement="right" title="Điểm vote">@Model.question_totalRate</p>
                                    </div>
                                </center>
                                <center>
                                    <form ng-submit="rateQuestionF()" class="changSizeButtonRatePost">
                                        <button type="submit" onclick="btnRateQuestionF()" class="btn btn-sm" data-toggle="tooltip" data-placement="right" title="Vote câu hỏi"><i id="imgRateQuestionF" class="fa fa-chevron-down" style="font-size:200%;color:@if (checkRate_Question != null && checkRate_Question.rateQuestion_rateStatus == false) { @varColororangered } else { @varColorMain }"></i></button>
                                    </form>
                                </center>
                                <!--đánh dấu-->
                                <center>
                                    <form ng-submit="tickQuestion()" class="changSizeButtonRatePost">
                                        <button type="submit" onclick="btnTickQuestion()" class="btn btn-sm" data-toggle="tooltip" data-placement="right" title="Đánh dấu"><i id="imgTickQuestion" class="ni ni-book-bookmark" style="font-size:200%;color:@if (checkTick_Question != null) {@varColororangered } else { @varColorMain}"></i></button>
                                    </form>
                                </center>
                                <center>
                                    <span id="totalTickQuestion" class="text-center border-bottom" style="font-size:11px" data-toggle="tooltip" data-placement="right" title="Lượt đánh dấu">@Model.question_totalTick</span>
                                </center>
                                <!--show hoạt động-->
                                <center>
                                    <form ng-submit="showActivateQuestion()" class="changSizeButtonRatePost">
                                        <button type="submit" ng-click="btnShowActivate()" class="btn btn-sm mt-2" data-toggle="tooltip" data-placement="right" title="Hiển thị hoạt động"><i id="imgShowActivate" class="ni ni-compass-04" style="font-size:200%;color:@if (checkShow_Activate_Question != null) {@varColororangered } else { @varColorMain}"></i></button>
                                    </form>
                                </center>
                            }
                            else
                            {
                                <center>
                                    <span><i style="font-size:150%;" class="fa fa-chevron-up"></i></span>
                                </center>
                                <center>
                                    <div style="text-align: center">
                                        <p style="margin-top:6px;font-size:15px;" id="number">@Model.question_totalRate</p>
                                    </div>
                                </center>
                                <center>
                                    <span><i class="fa fa-chevron-down" style="font-size:150%;"></i></span>

                                </center>
                                <!--đánh dấu-->
                                <center>
                                    <span><i class="ni ni-book-bookmark" style="font-size:150%;"></i></span>

                                </center>
                                <center>
                                    <span class="text-center border-bottom" style="font-size:11px">@Model.question_totalTick</span>
                                </center>
                                <!--show hoạt động-->
                                <center>
                                    <span class=" mt-2"><i class="ni ni-compass-04" style="font-size:150%;"></i></span>
                                </center>
                            }

                            <center>
                                <span class="text-center border-bottom" style="font-size:11px">
                                    @if (Model.question_userStatus == true)
                                    {<i class="fas fa-globe-europe" style="font-size:120%;" data-toggle="tooltip" data-placement="right" title="Mọi người xem"></i>}
                                    else
                                    {<i class="fas fa-user" style="font-size:120%;" data-toggle="tooltip" data-placement="right" title="Chỉ mình bạn xem"></i>}
                                </span>
                            </center>
                        </div>
                        <div class="col-10">
                            <div class="row m-0">
                                <div class="">
                                    <a class="text-decoration-none" href="@Url.Action("PageUser","UserManagement", new {id = Model.user_id })">
                                        <img class="profile-pic" src="~/Image/Users/@Model.User.user_avatar" width="44" height="44" alt="...">
                                    </a>
                                </div>
                                <div class="flex-grow-1 pl-2">
                                    <a class="text-decoration-none" href="@Url.Action("PageUser","UserManagement", new {id = Model.user_id })">
                                        <h2 class="text-capitalize h5 mb-0">@Model.User.user_firstName @Model.User.user_lastName @Model.User.user_popular <i class="fas fa-fire" style="color:red"></i></h2>
                                    </a>
                                    <p class="small text-dark m-0 mt-1">@Model.User.user_vipMedal<i class="fab fa-galactic-senate" style="color:orangered;font-size:24px"></i> @Model.User.user_goldMedal<i class="fas fa-award" style="color:yellow"></i>@Model.User.user_silverMedal<i class="fas fa-award" style="color:silver"></i> @Model.User.user_brozeMedal<i class="fas fa-award" style="color:#e88d15"></i>  </p>

                                </div>

                                <div class="dropdown">
                                    <a class="" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-chevron-down"></i>
                                    </a>
                                    @if (Request.Cookies["user_id"] != null && int.Parse(Request.Cookies["user_id"].Value.ToString()) == Model.user_id || Request.Cookies["admin_id"] != null)
                                    {
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                            <a class="dropdown-item text-primary" href="@Url.Action("QuestionStaturF","FunctionAtDetailQuestion",new { id = Model.question_id})"><i class="fas fa-eye"></i>Chỉ mình tôi xem</a>
                                            <a class="dropdown-item text-primary" href="@Url.Action("QuestionStaturT","FunctionAtDetailQuestion",new { id = Model.question_id})"><i class="fas fa-eye"></i>tất cả mọi người có thể xem</a>
                                            <a class="dropdown-item text-primary" href="@Url.Action("PostQuestion","Question",new { id = Model.question_id})"><i class="far fa-edit"></i> Sửa câu hỏi</a>
                                            <a class="dropdown-item text-primary" data-toggle="modal" data-target="#modal-notification" href="#"><i class="fas fa-eraser"></i> Xóa câu hỏi</a>
                                        </div>
                                        //Model xóa
                                        <div class="modal fade" id="modal-notification" tabindex="-1" role="dialog" aria-labelledby="modal-notification" aria-hidden="true">
                                            <div class="modal-dialog modal-danger modal-dialog-centered modal-" role="document">
                                                <div class="modal-content bg-gradient-danger">
                                                    <div class="modal-header">
                                                        @*<h6 class="modal-title" id="modal-title-notification">Your attention is required</h6>*@
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">×</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="py-3 text-center">
                                                            <i class="ni ni-bell-55 ni-3x"></i>
                                                            @*<h4 class="heading mt-4">Bạn đang thực</h4>*@
                                                            <p>Bạn có chắc chắn với hành động của mình!</p>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <a href="@Url.Action("recycleBinQueston","FunctionAtDetailQuestion",new { id = Model.question_id})" class="btn btn-white">Xóa câu hỏi này!</a>
                                                        <button type="button" class="btn btn-link text-white ml-auto" data-dismiss="modal">Đóng</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>

                            </div>
                            <!-- post body -->
                            <div class="">
                                <p class="my-2" style="font-weight:600">
                                    <h1>
                                        @Model.question_title
                                    </h1>
                                </p>
                            </div>
                            <div class="">
                                <p class="my-2">
                                    @Html.Raw(Model.question_content)
                                </p>

                            </div>
                            <div class="text-right">
                                <p>@Model.question_dateEdit <i class="far fa-calendar-alt"></i></p>
                            </div>
                            @{
                                List<Teachnology_Question> teachnology_Questions = db.Teachnology_Question.Where(n => n.question_id == Model.question_id).ToList();
                            }
                            <div>
                                @foreach (var item in teachnology_Questions)
                                {
                                    <a href="@Url.Action("ShowFollowTechnology","Center",new {id = item.technology_id })"><span class="badge badge-primary">@item.Technology.technology_name</span></a>

                                }
                            </div>
                            <div class="mt-3">
                                <div class="fb-like" data-href="https://localhost:44349/FunctionAtDetailQuestion/DetailQuestion?id=@Model.question_id" data-width="" data-layout="standard" data-action="like" data-size="small" data-share="true"></div>
                            </div>
                        </div>
                    </div>
                    <hr class="my-1">
                    <!-- post footer begins -->
                    <footer class="">
                        <!-- post actions -->
                        <div class="">
                            <ul class="list-group list-group-horizontal">

                                <li class="list-group-item flex-fill text-center p-0 px-lg-2 border border-0">
                                    <a class="small text-decoration-none">
                                        @{
                                            List<Answer> answers = db.Answers.Where(n => n.answer_activate == true && n.answer_userStatus == true && n.answer_admin_recycleBin == false && n.answer_recycleBin == false && n.question_id == Model.question_id).ToList();
                                        }
                                        <i class="fas fa-reply"></i> trả lời @answers.Count()
                                    </a>
                                </li>
                                <li class="list-group-item flex-fill text-center p-0 px-lg-2 border border-right-0 border-top-0 border-bottom-0">
                                    <a class="small text-decoration-none" role="button" aria-expanded="false" aria-controls="collapseExample">
                                        <i class="fas fa-comment-alt"></i> Bình luận @Model.question_totalComment
                                    </a>
                                </li>
                                <li class="list-group-item flex-fill text-center p-0 px-lg-2 border border-right-0 border-top-0 border-bottom-0 ">
                                    <a class="small text-decoration-none">
                                        <i class="fas fa-eye"></i> xem @Model.question_view
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </footer>
                    <!-- post footer ends -->
                </div>
            </section>
            <!-- ------------------------------------------------------TRả lời ---------------------------------------------- -->
            <div>
                <p>Trả lời <i class="fas fa-reply-all"></i></p>
            </div>
            <div class="card">
                @foreach (var item in answers)
                {
                    <section class="mt-4">
                        <div class="p-2">
                            <!-- post header -->
                            <div class="row">
                                <div class="col-2">
                                    @if (Request.Cookies["user_id"] != null)
                                    {
                                        int user_id = int.Parse(Request.Cookies["user_id"].Value.ToString());
                                        Rate_Answer checkRate_Answer = db.Rate_Answer.SingleOrDefault(n => n.user_id == user_id && n.answer_id == item.answer_id);
                                        Show_Activate_Question checkShow_Activate_Question = db.Show_Activate_Question.SingleOrDefault(n => n.user_id == user_id && n.question_id == Model.question_id);

                                        <center>
                                            <form ng-submit="rateAnswerT(@(item.answer_id))" class="changSizeButtonRatePost">
                                                <button type="submit" onclick="btnRateAnswerT@(item.answer_id)()" class="btn btn-sm" data-toggle="tooltip" data-placement="right" title="Vote câu trả lời"><i id="imgRateAnswerT@(item.answer_id)" class="fa fa-chevron-up" style="font-size:200%;color:@if (checkRate_Answer != null && checkRate_Answer.rateAnswer_rateStatus == true) { @varColororangered} else { @varColorMain}"></i></button>
                                            </form>
                                        </center>
                                        <center>
                                            <div style="text-align: center">
                                                <p style="margin-top:6px;font-size:15px;" id="totalRateAnswer@(item.answer_id)" data-toggle="tooltip" data-placement="right" title="Trung bình vote">@item.answer_totalRate</p>
                                            </div>
                                        </center>
                                        <center>
                                            <form ng-submit="rateAnswerF(@(item.answer_id))" class="changSizeButtonRatePost">
                                                <button type="submit" onclick="btnRateAnswerF@(item.answer_id)()" class="btn btn-sm" data-toggle="tooltip" data-placement="right" title="Vote câu trả lời"><i id="imgRateAnswerF@(item.answer_id)" class="fa fa-chevron-down" style="font-size:200%;color:@if (checkRate_Answer != null && checkRate_Answer.rateAnswer_rateStatus == false) { @varColororangered} else { @varColorMain}"></i></button>
                                            </form>
                                        </center>
                                        <!--show hoạt động
                                        -->
                                        <center>
                                            <form action="@Url.Action("ShowActivateQuestion", "FunctionAtDetailQuestion")" method="post" class="changSizeButtonRatePost">
                                                <input type="hidden" name="question_id" value="@Model.question_id" />
                                                <button type="submit" class="btn btn-sm mt-2" data-toggle="tooltip" data-placement="right" title="Đánh dấu hoạt động"><i class="ni ni-compass-04" style="font-size:200%;color:@if (checkShow_Activate_Question != null) {@varColororangered } else { @varColorMain}"></i></button>
                                            </form>
                                        </center>
                                        <script>
                                            function btnRateAnswerT@(item.answer_id)()
                                                {
                                                    if (document.getElementById("imgRateAnswerF@(item.answer_id)").style.color == 'orangered')
                                                    {
                                                        document.getElementById("totalRateAnswer@(item.answer_id)").innerText = Number(document.getElementById("totalRateAnswer@(item.answer_id)").innerText) + 2;
                                                        document.getElementById("imgRateAnswerT@(item.answer_id)").style.color = "orangered";
                                                        document.getElementById("imgRateAnswerF@(item.answer_id)").style.color = "#172b4d";
                                                    }
                                                    else if (document.getElementById("imgRateAnswerT@(item.answer_id)").style.color == 'orangered')
                                                    {
                                                        document.getElementById("totalRateAnswer@(item.answer_id)").innerText = Number(document.getElementById("totalRateAnswer@(item.answer_id)").innerText) - 1;
                                                        document.getElementById("imgRateAnswerT@(item.answer_id)").style.color = "#172b4d";
                                                    }
                                                    else {
                                                        document.getElementById("totalRateAnswer@(item.answer_id)").innerText = Number(document.getElementById("totalRateAnswer@(item.answer_id)").innerText) + 1;
                                                        document.getElementById("imgRateAnswerT@(item.answer_id)").style.color = "orangered";
                                                    }
                                            }
                                            function btnRateAnswerF@(item.answer_id)()
                                            {
                                                if (document.getElementById("imgRateAnswerT@(item.answer_id)").style.color == 'orangered') {
                                                    document.getElementById("totalRateAnswer@(item.answer_id)").innerText = Number(document.getElementById("totalRateAnswer@(item.answer_id)").innerText) - 2;
                                                    document.getElementById("imgRateAnswerF@(item.answer_id)").style.color = "orangered";
                                                    document.getElementById("imgRateAnswerT@(item.answer_id)").style.color = "#172b4d";
                                                }
                                                else if (document.getElementById("imgRateAnswerF@(item.answer_id)").style.color == 'orangered') {
                                                    document.getElementById("totalRateAnswer@(item.answer_id)").innerText = Number(document.getElementById("totalRateAnswer@(item.answer_id)").innerText) + 1;
                                                    document.getElementById("imgRateAnswerF@(item.answer_id)").style.color = "#172b4d";
                                                }
                                                else {
                                                    document.getElementById("totalRateAnswer@(item.answer_id)").innerText = Number(document.getElementById("totalRateAnswer@(item.answer_id)").innerText) - 1;
                                                    document.getElementById("imgRateAnswerF@(item.answer_id)").style.color = "orangered";
                                                }
                                            }
                                        </script>
                                    }
                                    else
                                    {
                                        <center>
                                            <span class="btn btn-sm"><i class="fa fa-chevron-up" style="font-size:150%"></i></span>
                                        </center>
                                        <center>
                                            <div style="text-align: center">
                                                <p style="margin-top:6px;font-size:15px;">@item.answer_totalRate</p>
                                            </div>
                                        </center>
                                        <center>
                                            <span class="btn btn-sm"><i class="fa fa-chevron-down" style="font-size:150%;"></i></span>
                                        </center>
                                    }

                                    @if (Request.Cookies["user_id"] != null && int.Parse(Request.Cookies["user_id"].Value.ToString()) == Model.user_id)
                                    {
                                        if (item.answer_correct == true)
                                        {
                                            <center>
                                                <button type="button" class="btn btn-sm" onclick="btnAnswerCorrect@(item.answer_id)()" ng-click="answerCorrect(@(item.answer_id))" data-toggle="tooltip" data-placement="right" title="Câu trả lời đúng nhất"><i id="imgAnswerCorresct@(item.answer_id)" class="fas fa-check" style="font-size:25px;color:green"></i></button>
                                            </center>
                                        }
                                        else
                                        {
                                            <center>
                                                <button type="button" class="btn btn-sm" onclick="btnAnswerCorrect@(item.answer_id)()" ng-click="answerCorrect(@(item.answer_id))" data-toggle="tooltip" data-placement="right" title="Câu trả lời đúng nhất"><i id="imgAnswerCorresct@(item.answer_id)" class="fas fa-check" style="font-size:25px;color:#172b4d"></i></button>
                                            </center>
                                        }
                                        <script>
                                            //Đồi màu nút AnswerCorrect
                                                function btnAnswerCorrect@(item.answer_id)()
                                                {
                                                    if (document.getElementById("imgAnswerCorresct@(item.answer_id)").style.color == "green")
                                                    {
                                                        document.getElementById("imgAnswerCorresct@(item.answer_id)").style.color = "#172b4d";
                                                    }
                                                    else {
                                                        document.getElementById("imgAnswerCorresct@(item.answer_id)").style.color = 'green';
                                                    }
                                                }
                                        </script>
                                    }
                                    else if (item.answer_correct == true)
                                    {
                                        <center>
                                            <i class="fas fa-check" style="font-size:25px;color:green" data-toggle="tooltip" data-placement="right" title="Câu trả lời đúng nhất"></i>
                                        </center>
                                    }
                                </div>
                                <div class="col-10">
                                    <div class="row m-0">
                                        <div class="">
                                            <a class="text-decoration-none" href="@Url.Action("PageUser", "UserManagement", new { id = item.user_id })">
                                                <img class="profile-pic" src="~/Image/Users/@item.User.user_avatar" width="40" height="40" alt="...">
                                            </a>
                                        </div>
                                        <div class="flex-grow-1 pl-2">
                                            <a class="text-decoration-none" href="@Url.Action("PageUser", "UserManagement", new { id = item.user_id })">
                                                <h2 class="text-capitalize h5 mb-0"> @item.User.user_firstName @item.User.user_lastName @item.User.user_popular <i class="fas fa-fire" style="color:red"></i></h2>
                                            </a>
                                            <p class="small text-dark m-0 mt-1">
                                                @item.User.user_vipMedal<i class="fab fa-galactic-senate" style="color:orangered;font-size:28px"></i>@item.User.user_goldMedal<i class="fas fa-award" style="color:yellow"></i>@item.User.user_silverMedal <i class="fas fa-award" style="color:silver"></i> @item.User.user_brozeMedal
                                                <i class="fas fa-award" style="color:#e88d15"></i>
                                            </p>

                                        </div>

                                        <div class="dropdown">
                                            <a class="" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fas fa-chevron-down"></i>
                                            </a>

                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
