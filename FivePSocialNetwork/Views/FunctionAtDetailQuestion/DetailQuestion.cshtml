    <script>
        var app = angular.module('myApp', ['ngSanitize']);
        app.controller('myCtrl', function ($scope, $http) {
            //show thẻ tags
            $http.get("/FunctionAtDetailQuestion/TagsQuestionJson/@Model.question_id")
                .then(function (response) {
                    // First function handles success
                    $scope.listTags = response.data;
                }, function (response) {
                    // Second function handles error
                        $scope.listTags = "Something went wrong";
                });
            //công nghệ liên quan
            $http.get("/FunctionAtDetailQuestion/QuestionRelationship/@Model.question_id")
                .then(function (response) {
                    // First function handles success
                    $scope.listQuestionRelationship = response.data;
                }, function (response) {
                    // Second function handles error
                        $scope.listQuestionRelationship = "Something went wrong";
                });
            $scope.rateQuestionT = function () {
                $http.post("/FunctionAtDetailQuestion/RateQuestionT?question_id=" + @Model.question_id)
            }
            $scope.rateQuestionF = function () {
                $http.post("/FunctionAtDetailQuestion/RateQuestionF?question_id=" + @Model.question_id)
            }
            $scope.tickQuestion = function () {
                $http.post("/FunctionAtDetailQuestion/TickQuestion?question_id=" + @Model.question_id)
            }
            $scope.showActivateQuestion = function () {
                $http.post("/FunctionAtDetailQuestion/ShowActivateQuestion?question_id=" + @Model.question_id)
            }
            $scope.rateAnswerT = function (id) {
                $http.post("/Answer/RateAnswerT?answer_id="+ id)
            }
            $scope.rateAnswerF = function (id) {
                $http.post("/Answer/RateAnswerF?answer_id=" + id)
            }
            $scope.answerCorrect = function (id) {
                $http.get("/Answer/AnswerCorrect?answer_id=" + id + "&question_id=" +@Model.question_id)
            }
            //hoạt động bài viết
            $scope.btnShowActivate = function () {
                if (document.getElementById("imgShowActivate").style.color == "orangered") {
                    document.getElementById("imgShowActivate").style.color = "#172b4d";
                }
                else {
                    document.getElementById("imgShowActivate").style.color = "orangered";
                }
            }
            //show User
            $http.get("/Message/ListUsers")
                .then(function (response) {
                    // First function handles success
                    $scope.listUsers = response.data;
                }, function (response) {
                    // Second function handles error
                    $scope.listUsers = "Something went wrong";
                });
        });
    //đổi màu các nút vow
    function btnRateQuestionT() {
        if (document.getElementById("imgRateQuestionF").style.color == 'orangered') {
            document.getElementById("totalRateQuestion").innerText = Number(document.getElementById("totalRateQuestion").innerText) + 2;
            document.getElementById("imgRateQuestionT").style.color = "orangered";
            document.getElementById("imgRateQuestionF").style.color = "#172b4d";
        }
        else if (document.getElementById("imgRateQuestionT").style.color == 'orangered') {
            document.getElementById("totalRateQuestion").innerText = Number(document.getElementById("totalRateQuestion").innerText) - 1;
            document.getElementById("imgRateQuestionT").style.color = "#172b4d";
        }
        else {
            document.getElementById("totalRateQuestion").innerText = Number(document.getElementById("totalRateQuestion").innerText) + 1;
            document.getElementById("imgRateQuestionT").style.color = "orangered";
        }
    }
    function btnRateQuestionF() {
        if (document.getElementById("imgRateQuestionT").style.color == 'orangered') {
            document.getElementById("totalRateQuestion").innerText = Number(document.getElementById("totalRateQuestion").innerText) - 2;
            document.getElementById("imgRateQuestionF").style.color = "orangered";
            document.getElementById("imgRateQuestionT").style.color = "#172b4d";
        }
