
@{
    ViewBag.Title = "HistoryDeleteQuestion";
    Layout = "~/Views/Shared/_LayoutCenter.cshtml";
}

<div class="header pb-6" style="">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-dark d-inline-block mb-0">Lịch sử xóa câu hỏi</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Lịch sử xóa câu hỏi</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    @*<a href="@Url.Action("PostQuestion","Question")" class="btn btn-sm btn-neutral"><i class="far fa-paper-plane"></i> Đặt câu hỏi?</a>
                        <a href="#" class="btn btn-sm btn-neutral"><i class="far fa-edit"></i> Đăng bài viết </a>*@
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6" ng-app="myApp">
    <div class="row" ng-controller="myCtrl">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0"><i class="fas fa-list-ol"></i> Danh sách <span style="font-size:17px">câu hỏi</span> đã xóa</h3>
                </div>
                @*<div class="float-right" style="padding: 10px;">
                        <a href="#" style="margin-left: 5px;">Nổi tiếng &nbsp;&nbsp;&nbsp; </a>
                        <a href="#" style="margin-left: 5px;">Trả lời &nbsp;&nbsp;&nbsp;</a>
                        <a href="#" style="margin-left: 5px;">&nbsp;&nbsp;&nbsp; <i class="fas fa-undo-alt"></i></a>
                    </div>*@
                <div class="form-group mb-0">
                    <div class="input-group input-group-alternative input-group-merge">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                        </div>
                        <input class="form-control" ng-model="txtSearch" placeholder="Tìm ..." type="text">
                    </div>
                </div>

                <!-- Light table -->

                <div class="table-responsive">
                    <table class="w-100 mt-3">
                        <thead>
                            <tr>
                                <th scope="col" class="text-center"> Stt</th>
                                <th scope="col" class="sort" data-sort="name">Câu hỏi <i class="fas fa-question"></i></th>
                                <th scope="col" class="text-center">
                                    Khôi phục
                                </th>
                            </tr>
                        </thead>
                        <tbody class="list">

                            <tr ng-repeat="x in filteredTodos| filter: txtSearch">
                                <td class="text-center">
                                    {{$index}}
                                </td>
                                <td scope="row" class="w-75">
                                    <div class="media align-items-center">
                                        <a href="@Url.Action("IndexDetailQuestion","DetailQuestion")" class="mr-2">

                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <div class="media-body">
                                            <a ng-href="/FunctionAtDetailQuestion/DetailQuestion?id={{x.question_id}}">
                                                <span class="name mb-0 text-sm" ng-show="x.question_title.length > 50">
                                                    {{x.question_title.substring(0, 50) + "..."}}
                                                </span>
                                                <span class="name mb-0 text-sm" ng-show="x.question_title.length < 50">
                                                    {{x.question_title}}
                                                </span>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                                <td class="budget text-center">
                                    <a ng-click="recycleBinQuestion(x.question_id,$index)"  href="#"><i class="fas fa-history" style="font-size:23px"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <pagination ng-model="currentPage"
                        total-items="list.length"
                        max-size="maxSize"
                        boundary-links="true">
            </pagination>
        </div>
    </div>
</div>
<script>
    var app = angular.module('myApp', ["ui.bootstrap"]);
    app.controller('myCtrl', function ($scope, $http) {
        $http.get("/UserManagement/ListHistoryDeleteQuestion")
            .then(function (response) {
                //Gia dinh
                $scope.filteredTodos = []
                    , $scope.currentPage = 1
                    , $scope.numPerPage = 12
                    , $scope.maxSize = 5;

                //Xac dinh list phan trang
                $scope.makeTodos = function () {
                    $scope.list = response.data;
                }
                $scope.makeTodos();

                //Phân trang
                $scope.$watch('currentPage + numPerPage', function () {
                    var begin = (($scope.currentPage - 1) * $scope.numPerPage)
                        , end = begin + $scope.numPerPage;

                    $scope.filteredTodos = $scope.list.slice(begin, end);
                });
            }, function (response) {
                // Second function handles error
                $scope.content = "Something went wrong";
            });
        $scope.recycleBinQuestion = function (id, idx) {
            $scope.filteredTodos.splice(idx, 1);
            $http.get("/UserManagement/RecycleBinQuestion?id=" + id)
        }
    });
</script>