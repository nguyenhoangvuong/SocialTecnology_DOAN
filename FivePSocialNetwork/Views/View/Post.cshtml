@model List<Post>
@{
    ViewBag.Title = "Post";
    Layout = "~/Views/Shared/_LayoutCenter.cshtml";
    var Id = ViewBag.UseId;
}
@using FivePSocialNetwork.Models;

<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link href="~/Content/Add/MessGroup.css" rel="stylesheet" />
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Tất cả bài viết</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Tất cả bài viết</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="@Url.Action("PostQuestion","Question")" class="btn btn-sm btn-neutral"><i class="far fa-paper-plane"></i> Đặt câu hỏi?</a>
                    <a href="@Url.Action("PostQuestion","Question")" class="btn btn-sm btn-neutral"><i class="far fa-edit"></i> Đăng bài viết </a>
                </div>
            </div>
            <!-- Card stats -->
            <div class="row">
                <div class="col-xl-12">
                    <img src="~/Image/Advertisement/TB1yBdxr9slXu8jSZFuXXXg7FXa.jpg" class="w-100 h-75 card" />
                </div>

            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--8" ng-app="myApp" ng-controller="myCtrl">

    <div class="row">

        <div class="col-xl-8">
            <div class="row">
                <div class="col-xl-12">
                    <div class="btn-group float-right" role="group" aria-label="Basic example">
                        <a href="@Url.Action("Hot", "Center")" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Kiếm điểm nổi tiếng nào?" data-container="body" data-animation="true">Thưởng<i class="far fa-snowflake text-danger"></i></a>
                        <a href="@Url.Action("Week","Center")" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Câu hỏi được trả lời nhiều trong tháng" data-container="body" data-animation="true">Tháng</a>
                        <a href="@Url.Action("View","Center")" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Xếp theo lượt xem cao đến thấp" data-container="body" data-animation="true">Lượt xem</a>
                        <a href="@Url.Action("Reply","Center")" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Xếp theo trả lời cao đến thấp" data-container="body" data-animation="true">Trả lời</a>
                    </div>
                </div>

            </div>
            <!-- Post Begins -->
            <section class="card">

                <div class="border p-2">
                    <!-- post header -->
                    @foreach (var item in Model.ToList())
                    {


<div class="row">
    <div class="col-2">
        @{
            if (item.Rate_Post.Where(X => X.user_id == Id && X.ratePost_rateStatus == true).Count() > 0)
            {
                <center>
                    <a href="/View/Like/@item.post_id"><i class="far fa-thumbs-up text-blue" style="font-size:150%;">@item.Rate_Post.Where(X => X.ratePost_rateStatus == true).Count()</i></a>

                </center>
            }
            else
            {
                <center>
                    <a class="text-dark" href="/View/Like/@item.post_id"><i class="far fa-thumbs-up " style="font-size:150%;">@item.Rate_Post.Where(X => X.ratePost_rateStatus == true).Count()</i></a>

                </center>
            }
        }

        <center class="mt-4 mb-4">

            <i class="fas fa-eye" style="font-size:150%;">@item.post_view</i>
        </center>
        @{
            if (item.Rate_Post.Where(X => X.user_id == Id && X.ratePost_rateStatus == false).Count() > 0)
            {
                <center>
                    <a href="/View/DistLike/@item.post_id"><i class="far fa-thumbs-down text-blue" style="font-size:150%;">@item.Rate_Post.Where(X => X.ratePost_rateStatus == false).Count()</i></a>

                </center>
            }
            else
            {
                <center>
                    <a  class="text-dark" href="/View/DistLike/@item.post_id"><i class="far fa-thumbs-down" style="font-size:150%;">@item.Rate_Post.Where(X => X.ratePost_rateStatus == false).Count()</i></a>

                </center>
            }
        }

    </div>
    <div class="col-10">
        <div class="row m-0">
            <div class="">
                <a class="text-decoration-none" href="">
                    <img class="" src="https://cdn3.iconfinder.com/data/icons/avatars-round-flat/33/avat-01-512.png" width="50" height="50" alt="...">

                    <img class="profile-pic" src="@item.post_image" width="100" height="100" alt="...">


                </a>
            </div>
            <div class="flex-grow-1 pl-2">
                <a class="text-decoration-none" href="/View/PostDetail/@item.post_id">
                    <h2 class="text-capitalize h5 mb-0">  @item.post_title</h2>
                </a>
                <a class="text-decoration-none" href="">
                    <h2 class="text-capitalize h5 mb-0"> Người tạo: @(item?.User?.user_firstName + " " + item?.User?.user_lastName)  </h2>
                </a>
                <p>@item.post_dateCreate.Value.ToString("dd-MM-yyyyy") <i class="far fa-calendar-alt"></i></p>

            </div>

            <div class="dropdown">
                <a class="" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-chevron-down"></i>
                </a>

                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item text-primary" href="#"><i class="far fa-edit"></i> Sửa câu hỏi</a>
                    <a class="dropdown-item text-primary" href="#"><i class="fas fa-eraser"></i> Xóa câu hỏi</a>
                </div>
            </div>

        </div>
        <!-- post body -->

     


    </div>
                        </div>
                    }

                    <!-- post footer begins -->
                </div>
            </section>
            <!-- Post Ends -->
            <!--TRả lời-->
            phân trang
