                                    <i class="far fa-trash-alt"></i> Thùng rác
                                </button>
                                <div class="modal fade" id="recycleBin" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel4" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-slideout modal-lg" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Danh sách tỉnh đã xóa</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">×</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <table class="table table-striped">
                                                    <thead class="thead-dark">
                                                        <tr>
                                                            <th scope="col">Stt</th>
                                                            <th scope="col">Tên</th>
                                                            <th scope="col">Thuộc tỉnh</th>
                                                            <th scope="col">Ngày sửa</th>
                                                            <th scope="col">Tùy chọn</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr ng-repeat="x in listRecycleBin">
                                                            <th scope="row">{{$index + 1}}</th>
                                                            <td>{{x.district_name}}</td>
                                                            <td>{{x.provincial_name}}</td>
                                                            <td>{{x.district_dateEdit}}</td>
                                                            <td><a href="#" ng-click="restore($index,x.provincial_id)"><i class="fas fa-undo-alt"></i></a> | <a href="#"><i class="fas fa-times-circle"></i></a></td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <!-- Modal -->
                            <div class="modal fade" id="addRowModal" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header no-bd">
                                            <h5 class="modal-title">
                                                <span class="fw-mediumbold">
                                                    Thêm mới
                                                </span>
                                                <span class="fw-light">
                                                    Xã
                                                </span>
                                            </h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <!--Thêm..............-->
                                        <form action="@Url.Action("CreateCommune","AddressAdmin")" method="post">
                                            <div class="modal-body">
                                                <p class="small">Điền đầy dủ thông tin dưới đây</p>

                                                @Html.AntiForgeryToken()
                                                <div class="row">
                                                    @*<div class="col-md-12 pr-0">
                                                        <div class="form-group form-group-default">
                                                            <label>Tên</label>
                                                            <input name="commune_name" id="addPosition" required="" type="text" class="form-control" placeholder="Tên..">
                                                        </div>
                                                    </div>*@
                                                    <div class="col-md-12 pr-0">
                                                        <div class="form-group form-group-default">
                                                            <label>Tên ds</label>
                                                            <input name="dsxa" id="" required="" type="text" class="form-control" placeholder="Tên..">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 pr-0">
                                                        <div class="form-group form-group-default">
                                                            <label>Thuộc huyện</label>
                                                            <select name="district_id" class="form-control">
                                                                @foreach(var item in districts)
                                                                {
                                                                <option value="1201">Tân Sơn</option>
                                                                    <option value="@item.district_id">@item.district_name</option>
                                                                }
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer no-bd">
                                                <button type="submit" id="addRowButton" class="btn btn-primary">Thêm xã</button>
                                                <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table id="add-row" class="display table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Stt</th>
                                            <th>Tên</th>
                                            <th>Thuộc huyện</th>
                                            <th>Ngày tạo</th>
                                            <th>Ngày sửa</th>
                                            <th>Trạng thái</th>
