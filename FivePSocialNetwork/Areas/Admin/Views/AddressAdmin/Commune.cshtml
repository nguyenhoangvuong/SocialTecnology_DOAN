                                            <td>{{x.commune_name}}</td>
                                            <td>{{x.district_name}}</td>
                                            <td>{{x.commune_dateCreate}}</td>
                                            <td>{{x.commune_dateEdit}}</td>
                                            <td ng-show="x.commune_activate == true">
                                                <a href="#">
