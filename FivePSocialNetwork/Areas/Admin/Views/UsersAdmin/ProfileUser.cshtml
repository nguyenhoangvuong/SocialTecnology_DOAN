                                            </div>
                                        </div>
                                        <div class="text-left">
                                            <div class="row text-left">
                                                <div class="col-1">
                                                    <i class="far fa-grin-hearts"></i>
                                                </div>
                                                <div class="col-10">
                                                    Sở thích cá nhân: @Model.user_hobby
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr />
