                                @if (Request.Cookies["admin_id"] != null && int.Parse(Request.Cookies["admin_id"].Value.ToString()) == Model.user_id)
                                {
                                    <div class="col-xl-5 col-5 text-right">
                                        <i class="fas fa-user-tie"></i> Vai trò : <i>ADMIN</i>
                                    </div>
